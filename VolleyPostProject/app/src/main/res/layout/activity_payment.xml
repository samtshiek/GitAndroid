<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/orange"
    tools:context=".PaymentActivity"
    android:weightSum="10">

    <include layout="@layout/app_bar_orange"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please review your information"
        android:layout_marginBottom="40dp"
        android:textSize="24dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="6">

        <TextView
            android:id="@+id/text_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="27dp"/>

        <TextView
            android:id="@+id/text_view_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="City"
            android:textColor="@color/white"
            android:textSize="27dp"/>

        <TextView
            android:id="@+id/text_view_street_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Street name"
            android:textColor="@color/white"
            android:textSize="27dp"/>

        <TextView
            android:id="@+id/text_view_house_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="House number"
            android:textColor="@color/white"
            android:textSize="27dp"/>

        <TextView
            android:id="@+id/text_view_pin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="Pin code"
            android:textColor="@color/white"
            android:textSize="27dp"/>

    </LinearLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="7dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/text_view_pay"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pay"
            android:textSize="27dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Cash"
            android:backgroundTint="@color/orange"/>

        <com.google.android.material.button.MaterialButton
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:backgroundTint="@color/orange"/>

    </RelativeLayout>

</LinearLayout>